{
  "name": "galxe-erc20-g-token",
  "version": "1.0.0",
  "description": "Galxe ERC20 Token G",
  "scripts": {
    "compile": "hardhat compile",
    "lint": "hardhat check",
    "prettier:check": "prettier --check --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "prettier": "prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol'",
    "test": "hardhat test --parallel",
    "test:report-gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy:local": "hardhat ignition deploy ignition/modules/GalxeTokenG.ts --network localhost --strategy create2"
  },
  "author": "Galxe team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "hardhat": "^2.22.3",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint-community": "^4.0.0",
    "solhint-plugin-prettier": "^0.1.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2"
  }
}
